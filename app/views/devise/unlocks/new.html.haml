= simple_form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-devise' } do |f|
  %h2 Resend unlock instructions

  = f.error_notification
  = f.full_error :unlock_token

  .form-inputs
    = f.input :email, required: true, autofocus: true

  .form-actions
    = f.button :submit, 'Resend unlock instructions', class: 'btn-primary btn-block'

  = render 'devise/shared/links'
